rule "idRozwiązania"
	when
		answered: Question(questionName == "idPytaniaNadrzędnego", answer == "idOdpowiedziNaPytanieNadrzędne")
		s: Solution(solutionName == "idRozwiązania")
	then
		s.setIsTrue(true);
		update(s);
end
