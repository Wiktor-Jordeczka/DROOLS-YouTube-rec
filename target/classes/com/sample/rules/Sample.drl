rule "id pytania"
	when
		answered: Question(questionName == "id pytania nadrzędnego", answer == "id odpowiedzi na pytanie nadrzędne")
		q: Question(questionName == "id pytania")
	then
		q.setAnswer(askQuestion(q));
		update(q);
end
