rule "idPytania"
	when
		answered: Question(questionName == "idPytaniaNadrzędnego", answer == "idOdpowiedziNaPytanieNadrzędne")
		q: Question(questionName == "idPytania")
	then
		q.setAnswer(askQuestion(q));
		update(q);
end
